@model GivskudDashboard.Models.Marker

@{
	ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Marker</h4>
<hr />

@Html.Partial("_DiscardChangesConfirmationModal")

<div class="row">
	<form asp-action="Edit">
		<div class="col-md-6">
			@Html.Partial("_Map")
		</div>
		<div class="col-md-6">

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="ID" />
			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Lat" class="control-label"></label>
				<input asp-for="Lat" type="number" class="form-control disabled" id="lat" />
				<span asp-validation-for="Lat" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Lng" class="control-label"></label>
				<input asp-for="Lng" type="number" class="form-control disabled" id="lng" />
				<span asp-validation-for="Lng" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="MarkerTypeID" class="control-label"></label>
				<select asp-for="MarkerTypeID" class="form-control">
					@foreach (var type in ViewBag.Types)
					{
						<option value="@type.ID">@type.Name</option>
					}
				</select>
				<span asp-validation-for="MarkerTypeID" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description.Title" class="control-label"></label>
				<input asp-for="Description.Title" class="form-control" />
				<span asp-validation-for="Description.Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description.Location" class="control-label"></label>
				<input asp-for="Description.Location" class="form-control" />
				<span asp-validation-for="Description.Location" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description.FeedingTime" class="control-label"></label>
				<input asp-for="Description.FeedingTime" class="form-control" />
				<span asp-validation-for="Description.FeedingTime" class="text-danger"></span>
			</div>

		</div>
		<div class="col-md-12">
			<br />
			<div class="form-group">
				<label asp-for="Description.Body" class="control-label"></label>
				<textarea asp-for="Description.Body" class="form-control"></textarea>
				<span asp-validation-for="Description.Body" class="text-danger"></span>
			</div>
			<input type="submit" value="Save" class="btn btn-default" />
			<a type="button" class="btn btn-danger" data-toggle="modal" data-target="#discard-changes-confirmation-modal">Discard Changes</a>
		</div>
	</form>
</div>


@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
	CKEDITOR.replace('Description.Body');

	var marker,
		latInput = document.getElementById("lat"),
		lngInput = document.getElementById("lng");

	marker = new google.maps.Marker({
		position: new google.maps.LatLng(latInput.value, lngInput.value),
	});
	marker.setMap(map);
	map.setCenter(new google.maps.LatLng(latInput.value, lngInput.value));

	map.addListener('click', (e) => {
		latInput.value = e.latLng.lat();
		lngInput.value = e.latLng.lng();
		marker.setMap(null);
		marker.position = new google.maps.LatLng(e.latLng.lat(), e.latLng.lng());
		marker.setMap(map);
	})
</script>
